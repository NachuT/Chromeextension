{
  "manifest_version": 3,
  "name": "DaltonEyes",
  "version": "1.0",
  "description": "A Chrome extension to capture screenshots and color correct them for 3 colorblindness varieties.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
